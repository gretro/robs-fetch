{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "lib": [
            "dom",
            "es6"
        ],
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "samples/**"
    ]
}